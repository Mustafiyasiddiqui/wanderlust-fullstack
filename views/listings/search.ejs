<% layout('layouts/boilerplate') %>
    <div class="container">
        <% if (listings.length===0) { %>
            <p>No listings found for this location.</p>
            <% } else { %>
                <% if (listings.length===0) { %>
                    <p>No listing found for this location.</p>
                    <% } else { %>
                        <div class="row">
                            <% listings.forEach(listing=> { %>
                                <div class="col">
                                    <div class="card card-column">

                                        <div class="card" style="width: 16rem">
                                            <img src="<%= listing.image.url %>" class="card-img-top"
                                                alt="<%= listing.title%>" style="height: 20rem">
                                            <div class="card-body2">
                                                <h5 class="card-title">
                                                    <%= listing.title %>
                                                </h5>
                                                <p class="card-text">
                                                    <%= listing.description %>
                                                </p>
                                                <p class="text-muted">
                                                    <%= listing.location %>
                                                </p>
                                                <a href="/listings/<%= listing._id %>" class="btn btn-dark mt-auto">View
                                                    Details</a>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                                <% }) %>
                                    <% } %>

                        </div>
                        <% } %>


    </div>